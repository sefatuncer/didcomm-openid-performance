{
  "name": "didcomm-openid-performance",
  "version": "1.0.0",
  "description": "Performance benchmark comparing DIDComm and OpenID4VC protocols for verifiable credential exchange",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "benchmark": "node dist/benchmark/runner.js --all",
    "benchmark:issuance": "node dist/benchmark/runner.js --scenario issuance",
    "benchmark:presentation": "node dist/benchmark/runner.js --scenario presentation",
    "benchmark:selective-disclosure": "node dist/benchmark/runner.js --scenario selective-disclosure",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sefatuncer/didcomm-openid-performance.git"
  },
  "keywords": [
    "DIDComm",
    "OpenID4VC",
    "Verifiable Credentials",
    "SSI",
    "Self-Sovereign Identity",
    "Performance Benchmark",
    "EUDI Wallet"
  ],
  "author": "Sefa Tuncer <tuncersefa@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sefatuncer/didcomm-openid-performance/issues"
  },
  "homepage": "https://github.com/sefatuncer/didcomm-openid-performance#readme",
  "dependencies": {
    "@credo-ts/core": "^0.5.3",
    "@credo-ts/node": "^0.5.3",
    "@credo-ts/askar": "^0.5.3",
    "@credo-ts/anoncreds": "^0.5.3",
    "@credo-ts/openid4vc": "^0.5.3",
    "@hyperledger/aries-askar-nodejs": "^0.2.1",
    "@hyperledger/anoncreds-nodejs": "^0.2.2",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0",
    "csv-writer": "^1.6.0",
    "statistics": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
